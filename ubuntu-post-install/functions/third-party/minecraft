#!/bin/bash

# Minecraft
function minecraft {
	# Add repository
	show_info 'Adding Minecraft Installer PPA to software sources...'
	show_warning 'Requires root privileges'
	sudo add-apt-repository -y ppa:minecraft-installer-peeps/minecraft-installer
	# Update repository information
	show_info 'Updating repository information...'
	sudo apt-get update -y
    show_success 'Done.'
	# Install
	show_info 'Installing Minecraft Installer...'
	sudo apt-get install -y minecraft-installer
    # Done
    show_success 'Done.'
    whiptail --title "Finished" --msgbox "Installation complete." 8 78
	thirdparty
}